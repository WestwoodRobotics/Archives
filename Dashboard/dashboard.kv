[VSeparator@Widget]:
    size_hint_x: None
    width: 10
    canvas:
        Color:
            rgba: .8, .8, .8, .3
        Rectangle:
            size: 1, self.height
            pos: self.center_x, self.y

[HSeparator@Label]:
    size_hint_y: None
    height: max(dp(25), self.texture_size[1])
    text: ctx.text if 'text' in ctx else ''
    text_size: self.width, None
    valign: 'middle'
    halign: 'left'
    canvas.before:
        Color:
            rgba: .2, .2, .2, .8
        Rectangle:
            size: self.width/2, self.size[1]
            pos: self.pos


<Dashboard>:
    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                orientation: 'horizontal'

                BoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    padding: 10
                    
                    ToggleButton:
                        id: toggle_drivemode_arcade
                        text: 'Arcade'
                        group: 'drivemode_toggle'
                        on_press: root.change_drivemode(1)

                    ToggleButton:
                        id: toggle_drivemode_tank
                        text: 'Tank'
                        group: 'drivemode_toggle'
                        on_press: root.change_drivemode(2)

                    ToggleButton:
                        id: toggle_drivemode_mecanum
                        value: 'Mecanum'
                        text: self.value
                        group: 'drivemode_toggle'
                        on_press: root.change_drivemode(3)

                    ToggleButton:
                        id: toggle_drivemode_mecatank
                        value: 'MecaTank'
                        text: self.value
                        group: 'drivemode_toggle'
                        on_press: root.change_drivemode(4)

                    TextInput:
                        id: text_drivemode
                        null: root.add_get_item('text_drivemode', 'drivemode_string', '')
                        value: 'Arcade'
                        text: self.value
                        readonly: True

                    HSeparator:
                        text: 'Battery Level'
                        spacing: 0

                    ProgressBar:
                        id: battery_level_bar
                        null: root.add_get_item('battery_level_bar', '/Robot/Status/battery_level', 0)
                        size_hint_y: None
                        height: 10

            BoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    padding: 2
                    size_hint_y: 0.15

                    HSeparator:
                        text: 'Gyro Readout'

                    HSeparator:
                        text: ''

                BoxLayout:
                    orientation: 'horizontal'

                    BoxLayout:
                        orientation: 'vertical'

                        Button:

                        Button:

                        Button:

                        Button:

                        Button:

                    BoxLayout:
                        orientation: 'vertical'

                        Button:

                        Button:

                        Button:
        TabbedPanel:
            do_default_tab: False

            TabbedPanelItem:
                text: 'Drivetrain'
                
                GridLayout:
                    rows: 5
                    cols: 2
                    
                    ToggleButton:

                    ToggleButton:

                    ToggleButton:

